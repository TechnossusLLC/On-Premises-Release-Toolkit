{
  "id": "d7054920-9d3a-11e5-8d5a-3550b6c8f69f",
  "name": "IISApplicationDeployment",
  "friendlyName": "IIS Application Deployment",
  "description": "Tear down and generate a new IIS Application on any machine with IIS 8.",
  "helpMarkDown": "",
  "category": "Deploy",
  "visibility": [                
                "Release"
                ],
  "author": "Microsoft Corporation",
  "version": {
    "Major": 1,
    "Minor": 1,
    "Patch": 4
  },  
  "minimumAgentVersion": "1.90.0",
  "inputs": [
    {
      "name": "name",
      "type": "string",
      "label": "IIS Application Name",
      "defaultValue": "",
      "required": true      
    },
    {
      "name": "hostName",
      "type": "string",
      "label": "Hostname",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Host name to be bound to the IIS Application."
    },
    {
      "name": "deployUser",
      "type": "string",
      "label": "Deployment User Name",     
      "required": true,
      "helpMarkDown": "The username of the deployment user."     
    },
    {
      "name": "deployPass",
      "type": "string",
      "label": "Deployment Password",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Slot"
    },
    {
      "name": "serviceAccountName",
      "type": "string",
      "label": "Service Account Name",
      "defaultValue": "",
      "helpMarkDown": "Name of the Managed Service Account that will be used for the IIS App pool.",
      "required": true
    },
    {
      "name": "serverName",
      "type": "string",
      "label": "Server Name",
      "defaultValue": "",
      "required": true
    },
    {
      "name": "certificateThumbprint",
      "type": "string",
      "label": "SSL Cert Thumbprint",
      "defaultValue": "",
      "required": false
    }
  ],
  
  "instanceNameFormat": "IIS Deployment: $(name)",
  "execution": {
    "PowerShell": {
      "target": "$(currentDirectory)\\DeployIIS.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}
