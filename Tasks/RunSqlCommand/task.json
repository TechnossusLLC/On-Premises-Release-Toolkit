{
    "id": "3bb3e250-f533-11e5-930d-c5573c0da11e",
    "name": "RunSqlCommand",
    "friendlyName": "Run Sql Command",
    "description": "Allows you to run a Sql Command without needing a script",
    "author": "Christopher Woolum",
    "helpMarkDown": "Replace with markdown to show in help",
    "category": "Utility",
    "visibility": [
        "Release"
    ],
    "demands": [],
    "version": {
        "Major": "0",
        "Minor": "1",
        "Patch": "3"
    },
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "minimumAgentVersion": "1.83.0",
    "instanceNameFormat": "RunSqlCommand $(message)",
    "inputs": [
        {
            "name": "serverName",
            "type": "string",
            "label": "Server Name",
            "required": true
        },
         {
            "name": "databaseName",
            "type": "string",
            "label": "Database Name",
            "required": true
        },
        {
            "name": "command",
            "type": "multiLine",
            "label": "Sql Command",
            "required": true
        },
        {
            "name": "deployUser",
            "type": "string",
            "label": "Deployment User Name",
            "required": false,
            "groupName": "advanced",
            "helpMarkDown": "The username of the deployment user. If not entered, the service account for the build host will be used."
        },
        {
            "name": "deployPass",
            "type": "string",
            "label": "Deployment Password",
            "defaultValue": "",
            "groupName": "advanced",
            "required": false
        }
    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\RunSqlCommand.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}