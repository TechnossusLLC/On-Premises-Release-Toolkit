{
  "id": "bd08eadf-5b48-4ad2-a85d-334f9b86755e",
  "name": "IISVirtualDirectoryDeployment",
  "friendlyName": "IIS Virtual Directory Deployment",
  "description": "Tear down and generate a new Virtual Directory on any machine with IIS 8.",
  "helpMarkDown": "",
  "category": "Deploy",
  "visibility": [                
                "Release"
                ],
  "author": "Technossus LLC",
  "version": {
    "Major": 1,
    "Minor": 0,
    "Patch": 1
  },  
  "minimumAgentVersion": "1.90.0",
  "inputs": [
    {
      "name": "parentName",
      "type": "string",
      "label": "IIS Parent Application Name",
      "defaultValue": "",
      "required": true      
    },
    {
      "name": "name",
      "type": "string",
      "label": "Hostname",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Host name to be bound to the IIS Application."
    },
    {
      "name": "path",
      "type": "string",
      "label": "Folder Name on the Host Machine",     
      "required": true,
      "helpMarkDown": "This folder will live under the path C:\\Apps."     
    },
    {
      "name": "deployUser",
      "type": "string",
      "label": "Deployment User Name",     
      "required": true,
      "helpMarkDown": "The username of the deployment user."     
    },
    {
      "name": "deployPass",
      "type": "string",
      "label": "Deployment Password",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Slot"
    },
  
    {
      "name": "serverName",
      "type": "string",
      "label": "Server Name",
      "defaultValue": "",
      "required": true
    }
  ],
  
  "instanceNameFormat": "IIS Deployment",
  "execution": {
    "PowerShell": {
      "target": "$(currentDirectory)\\DeployVirtualDirectory.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}
